<!DOCTYPE html>
<html>
  <head>
    <title>Shoe Finder</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel='stylesheet' href='~/Content/css/styles.css'>
  </head>
  <body>
    <div class="jumbotron text-center">
      <h1><a href="/">Shoe Finder</a></h1>

      <form class="container" action="/store_search" method="post">
         <div class="col-md-6 col-md-offset-3">
        	<div class="input-group input-group-lg">
            <input type="text" class="form-control" placeholder="Search by store" name="author-name">
          </div>
        </div>
      </form>

      <form class="container" action="/store_search" method="post">
         <div class="col-md-6 col-md-offset-3">
          <div class="input-group input-group-lg">
            <input type="text" class="form-control" placeholder="Search by store" name="book-name">
          </div>
        </div>
      </form>
    </div>

    <div class="container text-center">
            @{var route = @Model["store"].GetId();}
      <div class="container">
        <div id="forms">
          <h2>Edit @Model["store"].GetName()</h2>
          <form action="/store/@route/edit" method="post">
          <input type="hidden" name="_method" value="PATCH">
          <input name="store-id" type="hidden" value="@route">
          <label for="store-name">Store Name</label>
          <input id="store-name" name="store-name" type="text">
          <button type="submit">Submit</button>
        </form>
        <h4><a href="/store/@route/">Back</a></h4>
  </div>
